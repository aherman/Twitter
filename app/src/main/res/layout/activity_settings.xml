<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fit.ah.twitter.Settings.SettingsActivity"
    android:background="#141d26"
    android:theme="@style/twitter_theme_actionbar.">

    <include layout="@layout/nav_actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nav_actionbar"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        android:background="@color/background_holo_light"
        android:layout_below="@id/nav_actionbar"
        android:id="@+id/username_layout"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textSize="18dp"
            android:id="@+id/username_label"
            android:textColor="#EEEEEE"
            android:textStyle="bold"></TextView>

        <!--suppress AndroidDomInspection -->
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@username123"
            android:id="@+id/username"
            android:textColor="#AAAAAA"
            android:paddingLeft="1dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        android:background="@color/background_holo_light"
        android:layout_below="@id/username_layout"
        android:id="@+id/phone_layout"
        android:layout_marginTop="1dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone"
            android:textSize="18dp"
            android:id="@+id/phone_label"
            android:textColor="#EEEEEE"
            android:textStyle="bold"></TextView>

        <!--suppress AndroidDomInspection -->
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"
            android:id="@+id/phone"
            android:textColor="#AAAAAA"
            android:paddingLeft="1dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        android:background="@color/background_holo_light"
        android:layout_below="@id/phone_layout"
        android:id="@+id/email_layout"
        android:layout_marginTop="1dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email address"
            android:textSize="18dp"
            android:id="@+id/email_label"
            android:textColor="#EEEEEE"
            android:textStyle="bold"></TextView>

        <!--suppress AndroidDomInspection -->
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="myemail@gmail.com"
            android:id="@+id/email"
            android:textColor="#AAAAAA"
            android:paddingLeft="1dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        android:background="@color/background_holo_light"
        android:layout_below="@id/email_layout"
        android:id="@+id/password_layout"
        android:layout_marginTop="1dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="18dp"
            android:id="@+id/password_label"
            android:textColor="#EEEEEE"
            android:textStyle="bold"></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        android:background="@color/background_holo_light"
        android:layout_below="@id/password_layout"
        android:id="@+id/country_layout"
        android:layout_marginTop="1dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Country"
            android:textSize="18dp"
            android:id="@+id/country_label"
            android:textColor="#EEEEEE"
            android:textStyle="bold"></TextView>

        <!--suppress AndroidDomInspection -->
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bosnia &amp; Herzegovina"
            android:id="@+id/country"
            android:textColor="#AAAAAA"
            android:paddingLeft="1dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        android:background="@color/background_holo_light"
        android:layout_below="@id/country_layout"
        android:id="@+id/deactivate_layout"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deactivate your account"
            android:textSize="18dp"
            android:id="@+id/deactivate_label"
            android:textColor="@android:color/holo_red_light"
            android:textStyle="bold"></TextView>

    </LinearLayout>

</RelativeLayout>
